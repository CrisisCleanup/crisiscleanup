    <div class="small-12 medium-8 large-10 columns">
        <h2>Volunteers</h2>
        <h4 class="basic">Thank you for helping your community</h4>
    </div>
    <div class="small-12 medium-4 large-2 columns" align="center">
        <%= image_tag "characters/Workers Shovel Hammer-Team1.png", :class => "character" ,:alt => "Volunteers Power Crisis Cleanup"  %>
    </div>
