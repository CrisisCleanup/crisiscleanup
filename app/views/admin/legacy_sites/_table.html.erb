<table>
  <thead>
    <tr>
      <th width="200">Event</th>
      <th>Name</th>
      <th width="150">Address</th>
      <th width="150">City</th>
    </tr>
  </thead>
  <tbody>
    <% sites.each do |site| %>
      <tr>
        <td> 
          <a href=<%=edit_admin_legacy_site_path(site.id)%>>
              <%= site.legacy_event.case_label %>
            </a>
        </td>
        <td> <%= site.name %> </td>
        <td> <%= site.address %> </td>
        <td> <%= site.city %> </td>
      </tr>
    <% end %>
  </tbody>
</table>