<% content_for :title do %>
    Crisis Cleanup - Login
<% end %>

<% content_for :main do %>
<h2>Log in</h2>
<p>Welcome to Crisis Cleanup!</p>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<p>If you don't have a password:
  <ul>
    <li><a href="/register">Register Your Org</a> for the first time.</li>
    <li><a href="/volunteer">Volunteer</a> by requesting access from a fellow volunteer.</li>
    <li><a href="/password/new">Forgot or Reset</a> your password.</li>
    <li><a href="https://crisiscleanup.zendesk.com/hc/en-us/requests/new">Contact Help</a> if you used to have access months ago.</li>
    <!--<li><a href="/worker/temporary_passwords/new">Use your Temporary Password</a> (if you have one)</li>-->
  </ul>
<p>

<%= render "devise/shared/links" %>
<br>
<%end%>