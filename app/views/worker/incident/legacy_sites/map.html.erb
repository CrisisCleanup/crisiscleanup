<% content_for :title do %>
    Crisis Cleanup - Map
<% end %>

<% content_for :subheader do %>

<% end %>

<% content_for :main do %>
  <div id="main" class="alt">
    <!-- do not remove spans-->
    <span class='m-id hidden'><%= @legacy_event.id %></span>
    <span class='m-pin hidden'>all</span>
      <br>
    <div class='map-wrapper'>
      <div id="worker-map-canvas" style="width: 100%; min-height: 600px; height: 100%; margin-top: -41px;"></div>
    </div>
    <%= image_tag "map_legend.png", :class => "legend"  %>
    <div id="map-infobox"></div>
  </div>
<% end %>

<% content_for :sidebar do %>
  <div id="sidebar">
    <div id="filters-view">
      <h4>Map Filters</h4>
      <div class="row">
        <div class="small-12 columns">
          <ul id="map-filters"></ul>
        </div>
      </div>
    </div>
    <div class="hide" id="form-view">
      <h4 id="form-header">Map Filters</h4>
      <%= render 'site_form', url:worker_incident_path(@site.legacy_event.id) %>
    </div>
  </div>
<% end %>
